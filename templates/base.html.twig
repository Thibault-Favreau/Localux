<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
         <script src="https://kit.fontawesome.com/57e5b13124.js" crossorigin="anonymous"></script>
          <link rel="stylesheet" href="{{asset('css/reservation.css')}}">   
          {{ encore_entry_link_tags('app') }}
           
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
		
			<div class="container-fluid" style="background-color: #CC4B2C;">
				<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
					<div class="collapse navbar-collapse" id="navbarCollapse">
						<ul class="navbar-nav mr-auto">
							{# <li class="nav-item">
								<a class="nav-link" href="{{path('home')}}">Accueil</a>
							</li> #}
                            <li class="nav-item">
								<img src ="Localux.jpg" style="height:75px; width:100px; border-radius:8px;"></img>
							</li>
							
 							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
 							<li><a href="{{ path('security_logout') }}" style="font-weight: 500;font-size: x-large;color:white;">Se déconnecter</a></li> 
 							
							
							<li class="nav-item">
								<a class="nav-link" style="font-weight: 500;font-size: x-large;color:white;"href="{{path('reservation')}}">Réserver</a>
							</li>
                            <li class="nav-item">
							</li>
							{% endif %}
                            <li class="nav-item">
								<a class="nav-link" style="font-weight: 500; font-size: x-large; color:white;" href="{{path('connexion')}}">Connexion</a>
							</li>
						</ul>
						{# {% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<a style="margin-right:5%" class="btn btn-success" href="{{path('favoris')}}">Mon Tableau de Bord</a>
							<a style="color:white; margin-right:5%;">
								{{app.user.prenom}}</a>
							<a class="btn btn-danger" href="#">Se déconnecter</a>
						{% else %}
							<a class="btn btn" href="#" style="background-color: #2ABA2D; color:white;">Se connecter</a>
						{% endif %} #}
					</div>
				</nav>
			</div>
			{% block body %}{% endblock %}
		
		
	</body>
</html>
